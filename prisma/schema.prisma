// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


model RedeEnsino {
  idRedeEnsino Int     @id @default(autoincrement())
  nomeRede     String
  escolas      Escola[]
}

model Escola {
  idEscola          Int      @id @default(autoincrement())
  idRede            Int?
  name              String?
  endereco          String?
  telefone          String?
  horarios          String?
  mapa              String?
  foto              String?
  value             String?
  serie             String?
  turno             String?
  vagasOfertadas    Int?
  vagasDisponiveis  Int?

  rede              RedeEnsino? @relation(fields: [idRede], references: [idRedeEnsino])
}

model Contato {
  id        Int      @id @default(autoincrement())
  email     String
  tipo      String
  message   String
  createdAt DateTime @default(now())
}
